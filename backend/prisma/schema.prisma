// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(uuid())
  email    String     @unique
  username String
  password String
  reminders Reminder[]
  createdAt DateTime @default(now())
}

model Reminder {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  title     String
  content   String
  remindAt  DateTime
  repeat    String?  // optional: "daily", "weekly", "monthly"
  isSent    Boolean  @default(false)
  createdAt DateTime @default(now())
}
